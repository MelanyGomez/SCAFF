<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Registro_materiales">
    <ImageView
        android:id="@+id/img_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/reg_mat" />

    <TextView
        android:id="@+id/tv_mat_reg"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="REGISTRO  MATERIALES" />

    <TextView
        android:id="@+id/tv_nom_mat_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp"
        android:text="Nombre del material"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/ed_nom_mat_reg"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="240dp"
        android:ems="10"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:hint="Ingrese el nombre del material"
        android:background="@drawable/format_field"
        android:inputType="text" />
    <TextView
        android:id="@+id/tv_cos_mat_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="320dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Costo del material"/>
    <EditText
        android:id="@+id/ed_cos_mat_reg"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="360dp"
        android:ems="10"
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:hint="Ingrese el costo del material"
        android:background="@drawable/format_field"
        android:inputType="number"
        android:maxLength="6"/>


    <Button
        android:id="@+id/bt_registrar_mat_reg"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="450dp"
        android:backgroundTint="@color/yellow"
        android:onClick="Registrar_mat"
        android:text="REGISTRAR"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/bt_mostrar_mat_reg"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="@color/yellow"
        android:gravity="center"
        android:onClick="consultar"
        android:text="MOSTRAR"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:cornerRadius="20dp" />
    <Button
        android:id="@+id/bt_modificar_mat_reg"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="550dp"
        android:gravity="center"
        android:backgroundTint="@color/yellow"
        android:text="MODIFICAR"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:cornerRadius="20dp" />
    <Button
        android:id="@+id/bt_eliminar_mat_reg"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="600dp"
        android:backgroundTint="@color/yellow"
        android:text="ELIMINAR"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/bt_regresar_mat_reg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="670dp"
        android:backgroundTint="@color/black"
        android:drawableLeft="@drawable/ic_baseline_arrow_circle_left_24"
        android:onClick="volver_mat"
        android:text="REGRESAR"
        android:textColor="@color/white"
        android:textSize="15dp" />

</RelativeLayout>