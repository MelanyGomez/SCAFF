<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".pantallas.Maquinaria_act">

    <!--button7-->
    <Button
        android:id="@+id/materialButton2"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginStart="0dp"
        android:backgroundTint="@color/black1"
        android:onClick="irMaterialMaq"
        android:text="MATERIAL"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--button8-->
    <Button
        android:id="@+id/maquinariaButton2"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="130dp"
        android:backgroundTint="@color/black1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="MAQUINAS"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/registroButton2"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginStart="280dp"
        android:backgroundTint="@color/black1"
        android:onClick="irRegistroMaq"
        android:text="REGISTRO"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv1"
        android:layout_width="match_parent"
        android:layout_height="605dp"
        android:layout_below="@+id/maquinariaButton2"
        android:layout_marginTop="3dp" />

    <Button
        android:id="@+id/bt_regresar_lv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/black"
        android:drawableLeft="@drawable/ic_baseline_arrow_circle_left_24"
        android:onClick="volver"
        android:text="REGRESAR"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <Button
        android:id="@+id/agregar_maquina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="225dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:backgroundTint="@color/yellow"
        android:onClick="irAgregar_maquina"
        android:text="AGREGAR MAQUINA"
        android:textColor="@color/black"
        android:textSize="15dp" />


</RelativeLayout>